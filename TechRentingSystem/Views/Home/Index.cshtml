@{
    @model TechRentingSystem.Models.Home.IndexViewModel
}

@{
    ViewData["Title"] = "Welcome";
}

@{

    var cameras = Model.Cameras;
    var firstCamera = cameras.Any() ? cameras[0] : null;
    var secondCamera = cameras.Count > 1 ? cameras[1] : null;
    var thirdCamera = cameras.Count > 2 ? cameras[2] : null;
}



<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstCamera != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-70" src="@firstCamera.ImageUrl" alt="@firstCamera.Brand @firstCamera.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Camera" asp-action="Details" asp-route-id="@firstCamera.Id">@firstCamera.Year  @firstCamera.Brand @firstCamera.Model</a></h5>
                </div>
            </div>
        }
        @if (secondCamera != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondCamera.ImageUrl" alt="@secondCamera.Brand @secondCamera.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Camera" asp-action="Details" asp-route-id="@secondCamera.Id">@secondCamera.Year  @secondCamera.Brand @secondCamera.Model</a></h5>
                </div>
            </div>
        }
        @if (thirdCamera != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdCamera.ImageUrl" alt="@thirdCamera.Brand @thirdCamera.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Camera" asp-action="Details" asp-route-id="@thirdCamera.Id">@thirdCamera.Year  @thirdCamera.Brand @thirdCamera.Model</a></h5>
                </div>
            </div>
        }
    </div>
  
</div>
