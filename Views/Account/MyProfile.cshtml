@using TechRentingSystem.Models.Account
@model UserProfileViewModel

@{
    ViewData["Title"] = "My profile";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><h4>My Profile</h4></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="form-group row">
                            <label asp-for="@Model.FirstName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <h3>@Model.FirstName</h3>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane active">
                        <div class="form-group row">
                            <label asp-for="@Model.LastName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <h3>@Model.LastName</h3>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane active">
                        <div class="form-group row">
                            <label asp-for="@Model.Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <h3>@Model.Email</h3>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <a asp-controller="Account" asp-action="Edit" class="btn btn-block btn-primary btn-sm">Edit</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
