@using TechRentingSystem.Data.Models

@model ShoppingCart

<form method="post">
    <input hidden asp-for="@Model.CameraId" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Camera.Brand</h1>
                  @*  <p class="text-warning">by @Model.Model.Author</p>*@
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                 @*   <span class="badge badge-success pt-2" style="height:30px;">@Model.Camera.Category</span>
                    <span class="badge badge-warning pt-2" style="height:30px;">@Model.Camera.Category</span>*@
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">Model : @Model.Camera.Model</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb">Old Price: <strike>@Model.Camera.Price.ToString("c")</strike></h5>
                            </div>
                           
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-2 ">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 ">
                                    <div>@Model.Price.ToString("c")</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Model.Camera.Description</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10"><input class="form-control" asp-for="Count" /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Camera.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <input class="btn btn-primary" type="submit" value="Add to Cart" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}	</div>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"></script>
	<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

